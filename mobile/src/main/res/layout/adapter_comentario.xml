<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    android:layout_margin="6dp"
    android:clickable="true"
    card_view:cardBackgroundColor="@color/colorBackgroundCardView"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="6dp"
    android:foreground="?attr/selectableItemBackground">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="vertical"
        android:padding="4dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <ImageView android:id="@+id/foto_usuario"
                           android:layout_width="45dp"
                           android:layout_height="45dp"
                           android:src="@mipmap/ic_launcher"
                           android:layout_marginRight="16dp"
                           android:layout_gravity="center"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView android:id="@+id/nome_usuario"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:text="Fulano de Tal"
                              android:gravity="center_vertical"
                              android:textSize="13sp"
                                android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView android:id="@+id/comentario_local"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:text="Comentário legal Comentário legal Comentário legal Comentário legal"
                              android:gravity="center_vertical"
                              android:textSize="13sp"
                        android:layout_marginBottom="4dp"/>

                    <TextView android:id="@+id/data_comentario"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:gravity="center_vertical"
                              android:textSize="11sp"
                              android:text="12/12/2009 às 9:00h"
                        android:textColor="@color/colorDisibled"/>

                </LinearLayout>

            </LinearLayout>
    </LinearLayout>




</android.support.v7.widget.CardView>